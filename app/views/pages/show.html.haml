.join-us-teaser
  %span.teaser= t('mime.join_us.teaser')
  = link_to t('mime.join_us.new_article'), new_article_path, :class => 'button'

- @page.article_lists.each_with_index do |list, i|
  = render "pages/article_list", list: list, i: i

.action-links
  #edit_page_link{data: {page_id: @page.id}}
    = link_to t('pages.edit'), edit_page_path(@page), rel: 'nofollow'
