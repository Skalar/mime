.col{:class => ("left" if i == 0)}
  = link_to a, :class => 'featured' do
    %figure
      - if a.medias.first
        %img{:src => a.medias.first.file.thumb("238x175#nw").url}
      - else
        %img{:src => "http://dummyimage.com/238x175/bf/fff&text=#{a.headword_presentation}"}
      %figcaption= a.headword_presentation
