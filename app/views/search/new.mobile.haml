- header = capture do
  = render :partial => 'mobile/header', :locals => {:title => t('mime.mobile.title')}

- content = capture do
  = form_tag search_path, :method => :get do
    %div{:data => {:role => 'fieldcontain'}}
      = text_field_tag :q, params[:q], :type => 'search'
  - if @search_result
    %ul.search-result{:data => {:role => 'listview'}}
      - @search_result.each_hit_with_result do |hit, result|
        %li
          %h3= link_to highlights_for(hit, :headword) || result.headword_presentation, pretty_article_path(result), :rel => 'external'
          %p= highlights_for(hit, :text) || (strip_tags(result.text) || "").slice(0, 101) + 'â€¦'

= mobile_page(content, header)
