%tr{:class => [(version_counter == 0 ? 'current' : nil ), "version-number-#{version.version}"].compact.join(' ')}
  %td.version_number
    = version_number_or_text(version, version_counter)
  %td.version_date
    = l(version.updated_at)
  %td.author
    = render :partial => 'common/author_links', :locals => {:article => version}
