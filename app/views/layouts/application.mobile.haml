!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title<!= content_for?(:title) ? "#{yield(:title).strip} â€“ #{t('mime.title')}" : t('mime.title')
    %meta{:name => 'description', :content => content_for?(:description) ? yield(:description) : t('mime.description')}
    %meta{:'http-equiv' => "content-language", :content => "no"}
    = yield :canonical

    = include_stylesheets :mobile
    = favicon_link_tag

    %script{:src => "http://use.typekit.com/odc3uil.js"}
    %script{:src => "/js/"}

    = yield :javascripts
    = include_javascripts :mobile

    = csrf_meta_tag

  %body
    %header
      .title
        = link_to(image_tag('logo-title.png', :alt => t('mime.title')), root_path)
        %p= t('mime.header')
    #main{:class => "#{controller_name} #{action_name}"}
      - if controller_name == 'articles'
        %article
          %header
            %h1<= yield :header
          .wrapper
            = yield
      - else
        - if content_for? :header
          %header
            %h1<= yield :header
        .wrapper
          - with_format :html do
            = render :partial => "common/flash"
          = yield

    %footer
      - with_format :html do
        = render :partial => 'common/scores'
        = render :partial => 'common/google_analytics'
      .wrapper
        = yield :footer
