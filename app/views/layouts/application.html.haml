!!! 5
%html
  %head
    %title Mime

    = stylesheet_link_tag "http://yui.yahooapis.com/3.2.0/build/cssreset/reset-min.css"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "formtastic", "formtastic_changes"

    /[if lt IE 9]
      %script{:src => "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE8.js"}
      %script{:src => "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/ie7-squish.js"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"}
    %script{:src => "http://yui.yahooapis.com/3.2.0/build/yui/yui-min.js"}
    %script{:src => "http://www.google.com/jsapi?key=ABQIAAAA5Dv5TxV8lPXuM3G_ZxUKdBRzYoIzFCn6WH8ww2gK3BwzWZF03hTYnQj9-M47JSP4lbSEWBeHiVcSQQ"}
    %script{:src => "http://use.typekit.com/odc3uil.js"}
    / %script{:src => "http://cachedcommons.org/cache/modernizr/1.5.0/javascripts/modernizr-min.js"}
    / %script{:src => "http://github.com/Modernizr/Modernizr/raw/master/modernizr.js"}
    %script{:src => "http://github.com/Modernizr/Modernizr/raw/68a332b5da53cfdfb46194ab4d00601e3e05b335/modernizr.js"}
    = javascript_include_tag :defaults

    = csrf_meta_tag
    %meta{:charset => "utf-8"}
    %meta{:'http-equiv' => "content-language", :content => "no"}
    %meta{:name => "viewport", :content => "initial-scale=1.0, width=device-width, maximum-scale=1.0"}

  %body
    .container
      %header
        %h1.title= link_to t('mime.title'), root_path
        %aside.user-links
          = render :partial => "common/user-links"
        %aside.search
          = render :partial => "common/search"
        %nav
          = render :partial => "common/nav"
      - if notice || alert
        %section#messages
          - if notice
            #notice= notice
          - if alert
            #alert= alert

      %section#main
        - if controller_name == 'home'
          %header
            %h1<= yield :header
          = yield
        - elsif controller_name == 'articles'
          %section#content
            %article
              %header
                %h1<= yield :header
              = yield
        - else
          %section#content
            %header
              %h1<= yield :header
            .maincol
              = yield

        %footer
          %p Leksikonet er en tjeneste fra Budstikka.Media #{image_tag 'budstikka-logo-bw.png'}
