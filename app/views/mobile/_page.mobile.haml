%div{:id => id, :data => {:role => 'page'}}
  -if header
    %div{:data => {:role => 'header'}}
      = header
    
  %div{:data => {:role => 'content'}}
    - with_format :html do
      = render :partial => "common/flash"
    = content
  
  - if footer
    %div{:data => {:role => 'footer'}}
      = footer
