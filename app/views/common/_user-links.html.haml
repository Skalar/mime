%ul
  - if user_signed_in?
    %li= t('users.login.logged_in_as', :username => current_user.name_or_email)
    %li #{t('users.login.not_you')} #{link_to t('users.login.log_out'), destroy_user_session_path}
  - else
    %li= t('users.login.help_us')
    %li.fb-button
      = link_to user_omniauth_authorize_path(:facebook) do
        %span.fb-button-text= t('users.login.facebook.log_in')
